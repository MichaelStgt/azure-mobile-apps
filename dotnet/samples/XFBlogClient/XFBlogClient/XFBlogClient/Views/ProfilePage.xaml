<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFBlogClient.Views.ProfilePage"
             xmlns:vm="clr-namespace:XFBlogClient.ViewModels"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:valueConverters="clr-namespace:XFBlogClient.ValueConverters;assembly=XFBlogClient"
             Shell.NavBarIsVisible="false"
             Title="{Binding Profile}">
    
    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="0" Margin="0" RowDefinitions="400,*" RowSpacing="0">
        <Image Grid.Row="0" Grid.RowSpan="2" Source="{Binding AvatarUrl}" Aspect="AspectFill" Opacity="1" />

        <yummy:PancakeView Grid.Row="1" CornerRadius="20,20,0,0" VerticalOptions="FillAndExpand" BackgroundColor="White">
            <StackLayout Padding="20,40,20,0">
                <Label Text="{Binding AuthorName}" Style="{DynamicResource TitleLabel}" />
            </StackLayout>
        </yummy:PancakeView>

    </Grid>

</ContentPage>