<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFBlogClient.Views.NewBlogPage"
             Shell.PresentationMode="ModalAnimated"
             Shell.NavBarIsVisible="false"
             Title="New Blog Post">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" Padding="20,60,20,0">
        <Label Grid.Row="0"  Text="New Post" FontSize="45" FontFamily="Helvetica" FontAttributes="Bold" />
        <Entry Grid.Row="1" Placeholder="Title" />
        <Entry Grid.Row="2" Placeholder="Image Url" />
        <Editor Grid.Row="3" Placeholder="Text" HeightRequest="300"  />
        <Button Grid.Row="4" Text="Save" TextColor="Black" />
    </Grid>
    
</ContentPage>